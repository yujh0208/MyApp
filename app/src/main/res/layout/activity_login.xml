<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5FFFA"
    android:orientation="vertical"
    android:padding="30dp">

  <Button
      android:id="@+id/login"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/PW"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="-1dp"
      android:backgroundTint="#87CEFA"
      android:fontFamily="@font/juhee"
      android:text="Login"
      android:textSize="50px" />

  <ImageView
      android:id="@+id/imageJH"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="71dp"
      app:srcCompat="@drawable/logojh" />

  <TextView
      android:id="@+id/welcome"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageJH"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="0dp"
      android:fontFamily="@font/juhee"
      android:gravity="center"
      android:paddingTop="20dp"
      android:text="WELCOME TO MY APP"
      android:textSize="50px" />

  <EditText
      android:id="@+id/ID"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="237dp"
      android:fontFamily="@font/juhee"
      android:hint="ID" />

  <EditText
      android:id="@+id/PW"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/ID"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="0dp"
      android:fontFamily="@font/juhee"
      android:hint="PASSWORD"
      android:inputType="textPassword" />

  <Button
      android:id="@+id/goMain"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/join"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="0dp"
      android:backgroundTint="#87CEFA"
      android:fontFamily="@font/juhee"
      android:text="GO MAIN"
      android:textSize="50px" />

  <Button
      android:id="@+id/join"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/login"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="0dp"
      android:backgroundTint="#87CEFA"
      android:fontFamily="@font/juhee"
      android:text="JOIN"
      android:textSize="50px" />


</RelativeLayout>